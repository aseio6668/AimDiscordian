{
  "name": "aim-discordian",
  "version": "1.0.0",
  "description": "AIM Discordian - Classic AOL Instant Messenger with AI Bot Friends",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "server": "node src/server/server.js"
  },
  "build": {
    "appId": "com.discordian.aim",
    "productName": "AIM Discordian",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  },
  "dependencies": {
    "electron": "^27.1.3",
    "axios": "^1.6.2",
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "electron-builder": "^24.6.4"
  },
  "keywords": ["aim", "instant-messenger", "ai", "chatbot", "electron", "aol"],
  "author": "AIM Discordian Team",
  "license": "MIT"
}